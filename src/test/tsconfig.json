{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022",
            "DOM",
            "esnext.weakref"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noEmit": true,
        "types": [
            "node",
            "vscode",
            "mocha"
        ]
    },
    "include": [
        "./suite/core/Cline.test.ts",
        "./suite/utils/mock-helpers.ts"
    ]
}